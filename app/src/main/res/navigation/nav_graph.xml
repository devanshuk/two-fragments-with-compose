<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.viewmodelscoping.FirstFragment"
        android:label="FirstFragment" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
        <action
            android:id="@+id/action_firstFragment_to_sideBySideContainerFragment"
            app:destination="@id/sideBySideContainerFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.viewmodelscoping.SecondFragment"
        android:label="SecondFragment" />
    <fragment
        android:id="@+id/sideBySideContainerFragment"
        android:name="com.example.viewmodelscoping.sidebyside.SideBySideContainerFragment"
        android:label="SideBySideContainerFragment" >
        <argument
            android:name="leftNumber"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="rightNumber"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
</navigation>